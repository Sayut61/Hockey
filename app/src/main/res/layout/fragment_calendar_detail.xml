<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.calendardetail.CalendarDetailFragment">

    <TextView
        android:id="@+id/secondPeriodAwayTeamGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="T"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPeriodHomeTeamGoalTextView" />

    <TextView
        android:id="@+id/firstPeriodAwayTeamGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="T"
        app:layout_constraintEnd_toStartOf="@+id/secondPeriodAwayTeamGoalTextView"
        app:layout_constraintTop_toBottomOf="@+id/firstPeriodHomeTeamGoalTextView" />

    <TextView
        android:id="@+id/thirdPeriodAwayTeamGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="T"
        app:layout_constraintStart_toEndOf="@+id/secondPeriodAwayTeamGoalTextView"
        app:layout_constraintTop_toBottomOf="@+id/thirdPeriodHomeTeamGoalTextView" />

    <TextView
        android:id="@+id/secondPeriodHomeTeamGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="T"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPeriodTextView" />

    <TextView
        android:id="@+id/firstPeriodHomeTeamGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="T"
        app:layout_constraintEnd_toStartOf="@+id/secondPeriodHomeTeamGoalTextView"
        app:layout_constraintTop_toBottomOf="@+id/firstPeriodTextView" />

    <TextView
        android:id="@+id/thirdPeriodHomeTeamGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="T"
        app:layout_constraintStart_toEndOf="@+id/secondPeriodHomeTeamGoalTextView"
        app:layout_constraintTop_toBottomOf="@+id/thirdPeriodTextView" />

    <TextView
        android:id="@+id/dateAndTimeGameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="T"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeTeamImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/awayTeamImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="T"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamImageView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/homeTeamImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/awayTeamScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="56dp"
        android:text="T"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamImageView"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeTeamScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:text="T"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/homeTeamImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text=":"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamImageView"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/homeTeamImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeTeamFullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="T"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamImageView" />

    <TextView
        android:id="@+id/awayTeamFullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="72dp"
        android:text="T"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awayTeamImageView" />

    <TextView
        android:id="@+id/secondPeriodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="T"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstPeriodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="8dp"
        android:text="T"
        app:layout_constraintEnd_toStartOf="@+id/secondPeriodTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thirdPeriodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="208dp"
        android:text="T"
        app:layout_constraintStart_toEndOf="@+id/secondPeriodTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeTeamDetailImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/firstPeriodHomeTeamGoalTextView"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamFullNameTextView" />

    <ImageView
        android:id="@+id/awayTeamDetailImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/firstPeriodAwayTeamGoalTextView"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamFullNameTextView" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/calendarTabLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPeriodAwayTeamGoalTextView">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/calendarViewPager"
        android:layout_width="409dp"
        android:layout_height="391dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarTabLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>